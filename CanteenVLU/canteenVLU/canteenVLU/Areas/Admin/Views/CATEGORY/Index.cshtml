@model IEnumerable<canteenVLU.Models.CATEGORY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>CATEGORY</h2>

<p>
    <a href="@Url.Action("Create")">
        <i class="fas fa-plus-circle"> New category !!</i>
    </a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">LIST CATEGORY</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CATEGORY_CODE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CATEGORY_NAME)
                    </th>
                    <th>
                        IMAGE
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.STATUS)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CATEGORY_CODE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CATEGORY_NAME)
                        </td>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.IMAGE_URL)*@
                            <img src="~/@item.IMAGE_URL" width="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.STATUS)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit",new {id = item.ID })">
                                <i class="fas fa-edit"></i>
                            </a> |
                            <a href="@Url.Action("Details",new {id = item.ID })">
                                <i class="fas fa-info-circle"></i>
                            </a> |
                            <a href="@Url.Action("Delete",new {id = item.ID })">
                                <i class="far fa-times-circle"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CATEGORY_CODE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CATEGORY_NAME)
                    </th>
                    <th>
                        IMAGE
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.STATUS)
                    </th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
